// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model pants {
  id       String  @id @default(cuid())
  title    String
  pieceUrl String?
  tipe     String

  priceInCents  Int
  quantityI     Int?
  quantityII    Int?
  quantityIII   Int?
  quantityIIII  Int?
  quantityV     Int?
  quantityIV    Int?
  quantityIIV   Int?
  quantityIIIV  Int?
  quantityIIIIV Int?
}

model shirt {
  id       String  @id @default(cuid())
  title    String
  pieceUrl String?
  tipe     String

  priceInCents Int
  quantityPP   Int?
  quantityP    Int?
  quantityM    Int?
  quantityG    Int?
  quantityGG   Int?
}

model Tshirts {
  id       String @id @default(cuid())
  title    String
  pieceUrl String
  tipe     String

  priceInCents Int
  quantityPP   Int?
  quantityP    Int?
  quantityM    Int?
  quantityG    Int?
  quantityGG   Int?
}

model blouses {
  id       String @id @default(cuid())
  title    String
  pieceUrl String
  tipe     String

  priceInCents Int
  quantityPP   Int?
  quantityP    Int?
  quantityM    Int?
  quantityG    Int?
  quantityGG   Int?
}
